{% extends "base.html.twig" %}

{% block title %}{{ parent() }} Users{% endblock %}

{% block content %}
    <div class="row py-4">
        <div class="col mb-2">
            <a class="btn btn-danger" href="/"> Retour </a>
        </div>
        <hr/>
        <div class="col">
            <div class="card">
                <div class="card-header"><b>Users</b></div>
                <div class="card-body">
                    <form method="post" id="searchForm" name="searchForm" autocomplete="off">

                            <div class="form-group">
                                <label for="search">Recherche</label>
                                <input id="search" type="text" name="search" class="form-control">
                            </div>

                            <div class="d-grid gap-2">
                                <input class="btn btn-success mt-2" type="submit" name="submit">
                            </div>

                    </form>
                    <hr/>
                    <table class="table table-striped table-responsive table-bordered">
                        <thead>
                        <tr>
                            <th>id</th>
                            <th>Nom</th>
                            <th>Email</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.name }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}